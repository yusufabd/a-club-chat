<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_row_name"
        android:layout_alignParentTop="true"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text="Blank topic"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_row_message"
        android:layout_below="@+id/text_view_row_name"
        android:textColor="@color/gray"
        android:layout_marginTop="5dp"
        android:text="Blank message"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_row_time"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="10sp"
        android:text="12:34"/>

    <TextView
        android:layout_width="20sp"
        android:layout_height="20sp"
        android:id="@+id/text_view_row_unread_count"
        android:background="@drawable/bg_circle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/text_view_row_time"
        android:layout_marginTop="5dp"
        android:text="25"
        android:textSize="10dp"
        android:textColor="@color/white"
        android:gravity="center"/>
</RelativeLayout>