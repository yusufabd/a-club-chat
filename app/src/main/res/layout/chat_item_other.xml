<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_message"
        android:textSize="@dimen/message_text_size"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/message_padding"
        android:layout_marginLeft="@dimen/message_padding"
        android:background="@drawable/bg_bubble_white"
        android:textIsSelectable="true"
        android:text="What you want from me"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_timestamp"
        android:layout_below="@+id/text_view_message"
        android:layout_marginBottom="@dimen/timestamp_margin_bottom"
        android:layout_marginLeft="@dimen/message_padding"
        android:layout_marginStart="@dimen/message_padding"
        android:paddingLeft="@dimen/message_padding"
        android:paddingTop="@dimen/padding_bottom_parent"
        android:textSize="@dimen/timestamp_text_size"
        android:text="12:00"/>
</RelativeLayout>